@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Test emocional";

    string[] preguntas = new[]
    {
        "🌈 En estos días, ¿te has sentido con buen ánimo?",
        "🎨 ¿Has tenido ganas de hacer las cosas que te gustan?",
        "💭 ¿Te has sentido preocupado o con muchos pensamientos?",
        "⚡ ¿Te has sentido nervioso sin una razón clara?",
        "🤝 ¿Te has sentido acompañado por otras personas?",
        "💬 ¿Sientes que alguien te escucha cuando hablas?",
        "🧩 Cuando tienes un problema, ¿te cuesta resolverlo?",
        "🔥 ¿Te enojas con facilidad?",
        "😞 ¿Te has sentido triste sin saber por qué?",
        "😴 ¿Has tenido problemas para dormir?",
        "📉 ¿Te ha faltado energía últimamente?",
        "🧠 ¿Te cuesta concentrarte en clases o tareas?",
        "🚫 ¿Evitas situaciones por miedo o nervios?",
        "😶 ¿Te sientes vacío o sin motivación?",
        "🤔 ¿Piensas mucho en errores del pasado?",
        "😠 ¿Te frustras cuando algo no sale como esperas?",
        "💪 ¿Sientes confianza en ti mismo?",
        "🌱 ¿Crees que puedes mejorar lo que te preocupa?",
        "🧍 ¿Te has sentido solo aunque estés acompañado?",
        "✨ ¿Te sientes capaz de enfrentar nuevos retos?",
        "🛡️ ¿Sientes que, pase lo que pase, podrás manejarlo?"
    };
}

<section class="bg-gradient-to-br from-secondary to-primary text-white">
    <div class="max-w-[1100px] mx-auto px-5 py-12">
        <span class="inline-block bg-white/20 px-4 py-1 rounded-full text-sm mb-3">
            💙 Conócete mejor
        </span>
        <h1 class="text-[clamp(26px,5vw,40px)] font-bold">
            ¿Cómo te has sentido últimamente?
        </h1>
        <p class="text-white/90 mt-3 max-w-[600px]">
            Responde con calma ✨ No hay respuestas buenas o malas.
        </p>
    </div>
</section>

<main class="max-w-[900px] mx-auto px-5 my-8">

    <form method="post"
          action="@Url.Action("Analizar", "TestEmotional")"
          class="bg-card rounded-2xl shadow-soft p-6 space-y-10">

        @for (int i = 0; i < preguntas.Length; i++)
        {
            <div class="space-y-4 bg-gray-50 p-4 rounded-2xl border">
                <p class="font-semibold text-lg">@(i + 1). @preguntas[i]</p>

                <div class="grid sm:grid-cols-4 gap-3">
                    <label>
                        <input type="radio" name="p@(i + 1)" value="0" required />
                        Nunca
                    </label>
                    <label>
                        <input type="radio" name="p@(i + 1)" value="1" />
                        A veces
                    </label>
                    <label>
                        <input type="radio" name="p@(i + 1)" value="2" />
                        Muchas veces
                    </label>
                    <label>
                        <input type="radio" name="p@(i + 1)" value="3" />
                        Siempre
                    </label>
                </div>
            </div>
        }

        <div class="flex justify-end pt-4">
            <button type="submit"
                    class="bg-secondary text-white px-7 py-3 rounded-xl font-semibold shadow-lg">
                Ver mis resultados 💙
            </button>
        </div>

    </form>
</main>
