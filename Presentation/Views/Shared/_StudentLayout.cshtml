<!DOCTYPE html>
<html lang="es" class="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Mente Sana</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        bg: '#f5f7fa',
                        text: '#333',
                        muted: '#6b7280',
                        primary: '#6BCB77',
                        'primary-600': '#5ab967',
                        secondary: '#4D96FF',
                        accent: '#FFD93D',
                        deep: '#2c3e50',
                        card: '#ffffff'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-bg dark:bg-slate-900 text-text dark:text-slate-100 transition-colors duration-300">

    <header class="bg-card dark:bg-slate-800 shadow-soft sticky top-0 z-50 transition-colors duration-300">

        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">

            <!-- Brand -->
            <div class="flex items-center gap-3 font-bold text-xl text-deep dark:text-gray-100">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary to-secondary text-white flex items-center justify-center">
                    MS
                </div>
                <span>MenteSana</span>
            </div>

            <!-- Nav -->
            <nav class="hidden md:flex gap-6 font-medium text-gray-700 dark:text-gray-300">
                <a href="@Url.Action("Index", "Students")" class="hover:text-secondary dark:hover:text-secondary transition-colors">Inicio</a>
                <a href="#recursos" class="hover:text-secondary dark:hover:text-secondary transition-colors">Recursos</a>
                <a href="@Url.Action("Index","Community")" class="hover:text-secondary dark:hover:text-secondary transition-colors">Comunidad</a>
                <a href="@Url.Action("Index", "Profile")" class="hover:text-secondary dark:hover:text-secondary transition-colors">Mi Perfil</a>
            </nav>

            <!-- Actions -->
            <div class="flex items-center gap-3">
                <button id="themeToggle" class="text-xl">🌓</button>

                <a href="@Url.Action("Logout", "Login")"
                   class="bg-primary hover:bg-primary-600 text-white px-4 py-2 rounded-xl font-semibold transition-colors">
                    Salir
                </a>

            </div>

        </div>
    </header>


    <!-- CONTENIDO DE LA VISTA -->
    @RenderBody()

    <footer class="text-center text-muted py-6">
        © 2025 MenteSana · Un espacio seguro para ti 💙
    </footer>


    <!-- JS GLOBAL -->
    <script src="~/Scripts/site.js"></script>

    <!-- JS SOLO ESTUDIANTE -->
    <script src="~/Scripts/student.js"></script>

</body>
</html>


